package app;

public class Distance {
	private DataPoint point1, point2;
	private double length;
	public Distance(DataPoint pt1, DataPoint pt2, double len){
		point1 = pt1;
		point2 = pt2;
		length = len;
	}
	public void setPoints(DataPoint pt1, DataPoint pt2){
		point1 = pt1;
		point2 = pt2;
	}
	public void setPoint1(DataPoint pt1){
		point1 = pt1;
	}
	public void setPoint2(DataPoint pt2){
		point2 = pt2;
	}
	public DataPoint[] getPoints(){
		return new DataPoint[]{point1,point2};
	}
}
